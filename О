from telebot import TeleBot

# –°–æ–∑–¥–∞–π—Ç–µ –±–æ—Ç–∞ —Å –≤–∞—à–∏–º —Ç–æ–∫–µ–Ω–æ–º
bot = TeleBot('7511922230:AAHlunYEsKeeJfbiAuGluzsCjqaZ9uNIIMI')

# –ö–æ–º–∞–Ω–¥–∞ /start
@bot.message_handler(commands=['start'])
